{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "analysis": {
      "tokenizer": {
        "nori_mixed": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed"
        }
      },
      "analyzer": {
        "nori_analyzer": {
          "type": "custom",
          "tokenizer": "nori_mixed",
          "filter": ["nori_posfilter", "lowercase"]
        }
      },
      "filter": {
        "nori_posfilter": {
          "type": "nori_part_of_speech",
          "stoptags": ["E", "J", "SC", "SE", "SF", "VCN", "VCP", "VX"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "fileId": {
        "type": "long"
      },
      "userId": {
        "type": "long"
      },
      "categoryName": {
        "type": "keyword"
      },
      "tags": {
        "type": "text",
        "analyzer": "nori_analyzer",
        "search_analyzer": "nori_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "context": {
        "type": "text",
        "analyzer": "nori_analyzer",
        "search_analyzer": "nori_analyzer"
      },
      "ocrText": {
        "type": "text",
        "analyzer": "nori_analyzer",
        "search_analyzer": "nori_analyzer"
      },
      "imageUrl": {
        "type": "keyword"
      },
      "createdAt": {
        "type": "date",
        "format": "yyyy-MM-dd'T'HH:mm:ss"
      }
    }
  }
}
